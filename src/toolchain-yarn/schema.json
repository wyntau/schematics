{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "toolchainYarnOptionsSchema",
  "type": "object",
  "properties": {
    "with-registry": {
      "type": "string",
      "description": "the registry used",
      "default": "https://registry.npmmirror.com",
      "enum": ["https://registry.npmjs.org", "https://registry.npmmirror.com", "http://r.npm.sankuai.com"],
      "x-prompt": "Choose npm registry"
    },
    "toolchain-lerna": {
      "type": "boolean",
      "description": "enable toolchain lerna",
      "default": false,
      "x-prompt": "Choose to enable lerna support"
    }
  }
}
